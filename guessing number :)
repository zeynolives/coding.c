#include <iostream>
#include <stdlib.h>
using namespace std;

int main()
{
    int guess;
    char answer='y';
    srand(time(NULL));//gives us random numbers 
    while(answer=='y'){
        int randomNumber=rand()%100+1;//we used rand() func. to generate a series of random numbers and for getting numbers around 0-100.
        cout<<"Ä± got a number between 0 and 100"<<endl;
        cout<<"Guess!"<<endl;
        cin>>guess;
        while(guess!=randomNumber){
           if(randomNumber>guess){
               cout<<"My number is more than yours"<<endl;
           }
           else if(randomNumber<guess){
               cout<<"My number is less than yours"<<endl;
           }
           cout<<"Try again please"<<endl;
          cin>>guess;
        }

    cout<<"Well you got me .My number was"<<randomNumber<<endl;
    cout<<"Do you want to play again?"<<endl;
    cout<<"(yep:y,nope:n):";
    cin>>answer;
}
cout<<"Byee"<<endl;
    return 0;
}
